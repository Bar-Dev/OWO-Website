{
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "commonjs": true
  },
  "plugins": [
      "react"
  ],
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "settings": {
      "react": {
          "version": "16.0"
      }
  },
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "modules": true,
          "experimentalObjectRestSpread": true,
          "jsx": true
      },
      "sourceType": "module"
  },
  "rules": {
      "semi": 2,
      "comma-dangle": ["error", "always-multiline"],
      "react/prop-types": 0,
      "react/jsx-uses-vars": [2],
      "no-process-env": 0
  }
}
